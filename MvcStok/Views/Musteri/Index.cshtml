@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<table class="table table-bordered">
    <tr>
        <th>Müsteri  Id</th>
        <th>Müsteri Ad</th>
        <th>Müsteri Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
        <tr>
            <td>@mus.MUSTERIID</td>
            <td>@mus.MUSTERIAD</td>
            <td>@mus.MUSTERISOYAD</td>
            <td><a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>
            <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
        }
    </tbody>
</table>

<a href="/Musteri/YeniMusteri/" class="btn bg-primary">YENİ MUSTERİ</a>


